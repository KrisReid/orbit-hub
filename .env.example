# Core PM Environment Variables
# Copy this file to .env and update the values

# Database
DATABASE_URL=postgresql+asyncpg://corepm:corepm@localhost:5432/corepm

# Security - CHANGE THIS IN PRODUCTION!
SECRET_KEY=change-me-in-production-use-a-real-secret-key

# API Configuration
DEBUG=true
API_V1_PREFIX=/api/v1

# CORS - comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Task ID prefix (e.g., CORE-123)
TASK_ID_PREFIX=CORE

# GitHub Integration (optional)
# Set up a webhook at: https://github.com/{owner}/{repo}/settings/hooks
# GITHUB_WEBHOOK_SECRET=your-webhook-secret
# GITHUB_APP_ID=your-app-id
# GITHUB_PRIVATE_KEY=your-private-key

# Pagination defaults
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100
